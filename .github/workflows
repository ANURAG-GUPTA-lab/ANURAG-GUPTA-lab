name: Generate Snake

on:
  schedule: # Run workflow automatically
    - cron: "0 0 * * *" # everyday at midnight
  workflow_dispatch: # Allow manual run from the Actions tab

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout the repository
        uses: actions/checkout@v2

      - name: Generate snake animation
        uses: Platane/snk@v2
        with:
          github_user_name: ANURAG-GUPTA-lab
          output: dist/snake.svg

      - name: Push the generated snake animation to the output branch
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./dist
          publish_branch: output

      - name: Update README with the new snake animation
        run: |
          echo '![](https://raw.githubusercontent.com/ANURAG-GUPTA-lab/ANURAG-GUPTA-lab/output/github-contribution-grid-snake.svg)' > README.md
          git config --global user.name 'github-actions[bot]'
          git config --global user.email 'github-actions[bot]@users.noreply.github.com'
          git add README.md
          git commit -m "Update README with snake animation"
          git push
